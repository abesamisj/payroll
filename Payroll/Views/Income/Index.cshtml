@model IEnumerable<Payroll.Models.IncomeViewModels>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Incomes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="code-cut">
    @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.IncomeId).Titled("Income Id").Filterable(true);
                        columns.Add(c => c.IncomeName).Titled("Income Name").Filterable(true);
                        columns.Add(c => c.IncomeValue).Titled("Income Value").Filterable(true);
                        columns.Add(c => c.IncomeDescription).Titled("Income Description");
                        columns.Add(c => c.Active).Titled("Status");

                        columns.Add()
                        .Encoded(false)
                        .Sanitized(false)
                        .SetWidth(30)
                        .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.IncomeId }));

                    }).WithPaging(20).Sortable(true)
</div> 