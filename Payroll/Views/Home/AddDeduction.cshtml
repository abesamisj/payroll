@model Payroll.Models.AddDeductionViewModel

@{
    ViewBag.Title = "AddDeduction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Deduction</h2>

@using (Html.BeginForm("AddDeduction", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.EditorFor(model => model.UserPersonalInformationId)

    <div class="form-group">
        @Html.LabelFor(model => model.Deductions, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(n => n.DeductionId, Model.Deductions, "Please select a deduction", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedDeductionName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <span class"form-control">@Html.DisplayFor(model => model.SelectedDeductionName)</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedDeductionAmount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <span class"form-control">@Html.DisplayFor(model => model.SelectedDeductionAmount)</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCustomAmount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelectedCustomAmount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SelectedCustomAmount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "AssignDeduction", new { id = Model.UserPersonalInformationId })
</div>
